<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Update "<%= project.title %>"</title>
</head>
<body>



<form action="/update/project/<%= project.id %>?_method=put" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">

<% project.img.forEach(imageUrl => { %>
        <img style="  display: inline;
  max-width:200px;
  max-height: 200px;
  width: auto;
  height: auto;" src="/uploads/<%= imageUrl %>" alt="Project Image">
    <% }) %>
    <div>
        <label for="img">Images:</label>
        <input type="file" id="img" name="img" multiple accept="image/*">
    </div>

    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= project.title%>" required>
    </div>

    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"  required><%= project.description%></textarea>
    </div>

    <button type="submit">update Project</button>
</form>
</body>
</html>